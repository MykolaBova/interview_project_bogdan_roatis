        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:s="urn:import:com.mySampleApplication.client.ui.place.form"
        xmlns:form="urn:import:com.mySampleApplication.client.ui.place.form">

    <ui:style>
        .scrollable {
            height: 400px;
            width: 250px;
            border: 1px solid #ccc;
            text-align: right;
        }

        .placeFormCell {
            padding-left: 20px;
        }
    </ui:style>

    <g:HTMLPanel>
        <table>
            <tr>
                <td
                        class='{style.placeFormCell}'
                        align='right'>
                    <s:PlaceForm
                            addStyleNames='{style.scrollable}'
                            ui:field='placeForm'/>
                    <br/>
                </td>
            </tr>
